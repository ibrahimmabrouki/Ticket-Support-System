{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "moduleDetection": "auto",
    "skipLibCheck": true
  }
}